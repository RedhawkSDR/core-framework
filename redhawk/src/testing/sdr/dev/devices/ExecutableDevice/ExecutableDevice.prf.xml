<!DOCTYPE properties PUBLIC '-//JTRS//DTD SCA V2.2.2 PRF//EN' 'properties.dtd'>
<properties>
    <!-- Provide a processor_name and os_name matching property -->
    <!-- See section D2.1.6.8 and Attachment 2 to Appendix D -->
    <simple id="DCE:4a23ad60-0b25-4121-a630-68803a498f75"
            name="os_name"
            mode="readonly"
            type="string">
        <description>
            SCA required property describing the Operating System
        </description>
        <value>Linux</value>
        <kind kindtype="allocation"/>
        <action type="eq"/>
    </simple>
    <simple id="DCE:fefb9c66-d14a-438d-ad59-2cfd1adb272b"
            name="processor_name"
            mode="readonly"
            type="string">
        <description>
            SCA required property describing the CPU type
        </description>
        <value>x86</value>
        <kind kindtype="allocation"/>
        <action type="eq"/>
    </simple>
    <simple id="LD_LIBRARY_PATH" mode="readonly" type="string">
        <kind kindtype="configure"/>
        <action type="external"/>
    </simple>
    <simple id="PYTHONPATH" mode="readonly" type="string">
        <kind kindtype="configure"/>
        <action type="external"/>
    </simple>
    <simple id="CLASSPATH" mode="readonly" type="string">
        <kind kindtype="configure"/>
        <action type="external"/>
    </simple>
</properties>
