<!DOCTYPE softwareassembly PUBLIC "-//JTRS//DTD SCA V2.2.2 SAD//EN" "softwareassembly.dtd">
<softwareassembly id="device_requires_red_colloc_and_nocolloc_green" name="device_requires_red_colloc_and_nocolloc_green">
  <componentfiles>
    <componentfile id="SimpleComponent_SPD_1" type="SPD">
      <localfile name="/components/SimpleComponent/SimpleComponent.spd.xml"/>
    </componentfile>
    <componentfile id="C2_SPD_1" type="SPD">
      <localfile name="/components/C2/C2.spd.xml"/>
    </componentfile>
  </componentfiles>
  <partitioning>
   <hostcollocation id="colloc-red-15" name="colloc-red-15">
     <componentplacement>
      <componentfileref refid="SimpleComponent_SPD_1"/>
      <componentinstantiation id="SimpleComponent_Red" startorder="0">
        <usagename>SimpleComponent_Red</usagename>
        <findcomponent>
          <namingservice name="SimpleComponent_Red"/>
        </findcomponent>
        <devicerequires>
            <requires id="color" value="RED"/>
            <requires id="rank" value="15"/>
        </devicerequires>
      </componentinstantiation>
    </componentplacement>
   </hostcollocation>
    <componentplacement>
      <componentfileref refid="C2_SPD_1"/>
      <componentinstantiation id="C2_Green" startorder="1">
        <usagename>C2_Green</usagename>
        <findcomponent>
          <namingservice name="C2_Green"/>
        </findcomponent>
        <devicerequires>
            <requires id="color" value="GREEN"/>
        </devicerequires>
      </componentinstantiation>
    </componentplacement>
  </partitioning>
  <assemblycontroller>
    <componentinstantiationref refid="C2_Green"/>
  </assemblycontroller>
</softwareassembly>
