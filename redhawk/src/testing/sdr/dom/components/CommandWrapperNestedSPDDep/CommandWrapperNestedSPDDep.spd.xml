<!DOCTYPE softpkg PUBLIC '-//JTRS//DTD SCA V2.2.2 SPD//EN' 'softpkg.dtd'>
<softpkg id="DCE:458872f6-a316-4082-b1eb-ce5704f5c40e" name="CommandWrapperNestedSPDDep">
    <title/>
    <author>
        <name>REDHAWK test author</name>
    </author>
    <description>A python script that can wrap a non-sca command.  This is useful because
    OSSIE doesn't support components with the non-sca-compliant type.
    </description> 
    <propertyfile type="PRF">
        <localfile name="CommandWrapperNestedSPDDep.prf.xml"/>
    </propertyfile>
    <descriptor>
        <localfile name="CommandWrapperNestedSPDDep.scd.xml"/>
    </descriptor>
    <implementation id="DCE:535a68a7-64e4-424b-9045-5ffc7659bf9d">
        <description>The command wraper executable uses a property to determine
        which command to launch when start is called.
        </description> 
        <code type="Executable">
            <localfile name="CommandWrapperNestedSPDDep.py"/>
            <entrypoint>CommandWrapperNestedSPDDep.py</entrypoint>
            <stacksize>8192</stacksize>
            <priority>15</priority>
        </code>
        <os name="Linux"/>
        <processor name="x86"/>
        <processor name="x86_64"/>
        <dependency type="runtime_requirements">
            <softpkgref>
                <localfile name="/components/softpkgNestedDep/softpkgNestedDep.spd.xml"/>
                <implref refid="firstImplementation"/>
            </softpkgref>
        </dependency>
        <dependency type="runtime_requirements">
            <softpkgref>
                <localfile name="/components/softpkgNested2Dep/softpkgNested2Dep.spd.xml"/>
                <implref refid="firstImplementation"/>
            </softpkgref>
        </dependency>
    </implementation>
</softpkg>
