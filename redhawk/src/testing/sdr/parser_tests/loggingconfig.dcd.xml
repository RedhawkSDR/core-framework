<!DOCTYPE deviceconfiguration PUBLIC '-//JTRS//DTD SCA V2.2.2 DCD//EN' 'deviceconfiguration.dtd'>
<deviceconfiguration name="test_GPP_green" id="test_GPP_green">
    <devicemanagersoftpkg>
        <localfile name="/mgr/DeviceManager.spd.xml"/>
    </devicemanagersoftpkg>
    <componentfiles>
        <componentfile type="SPD" id="GPP1_file_1">
            <localfile name="/devices/GPP/GPP.spd.xml"/>
        </componentfile>
    </componentfiles>
    <partitioning>
        <componentplacement>
            <componentfileref refid="GPP1_file_1"/>
            <componentinstantiation id="test_GPP_green::GPP_1">
                <usagename>test_GPP_green::GPP_1</usagename>
                <loggingconfig level="ERROR">path/to/my/log/file</loggingconfig>
                <deployerrequires>
                  <requires id="color" value="GREEN"/>
                </deployerrequires>
            </componentinstantiation>
        </componentplacement>
    </partitioning>
    <domainmanager>
        <namingservice name="DomainName1/DomainManager"/>
    </domainmanager>
</deviceconfiguration>
