#{% if component.impl.module %}
#{% set solib = component.impl.entrypoint|relpath(outputdir) %}
.PHONY: convenience-link clean-convenience-link

all-local : convenience-link
clean-local : clean-convenience-link

convenience-link : {{ target }}
	@ln -fs .libs/{{solib}}

clean-convenience-link:
	@rm -f {{solib}}

#{% endif %}
#{% block distClean %}
distclean-local:
	rm -rf m4
	rm -f config.*
	rm -rf autom4te.cache
	rm -f acinclude.m4
	rm -f aclocal.m4
	rm -f configure
	rm -f depcomp
	rm -f install-sh
	rm -f ltmain.sh
	rm -f Makefile.in
	rm -f missing
	rm -rf .deps
#{% endblock %}

